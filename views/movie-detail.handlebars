<!-- ====================================== Main Content ==================================================== -->
<div class="container">
    <div class="row">
        <!-- ================ movie details ================ -->
        <div class="mainContent darkerBg col s12">
            <div class="row">
                <div class="col s10 offset-s1 mvDtl" id="review">
                    <div class="row">
                        <!-- poster image -->
                        <div class="col s4 m3 l2">
                            {{!-- img from movieObj --}}
                            <img class="mvImg" src={{imgHref}} />
                        </div>
                        <!-- Titles, Year, Rating-->
                        <div class="col s8 m9 l10">
                            <div>
                                <!-- Title, Year -->
                                <div class="row">
                                    <div class="col s12">
                                        <h5 class="left" id="title">{{title}}</h5>
                                        <p class="year-released">{{year}}</p>
                                    </div>
                                </div>
                                <!--Ratings (sam part) -->
                                <p class="otherRatings">Rotten Tomatoes 80</p>
                                <p class="otherRatings">IMDB 85</p>
                                <p class="mrRating">MovieRack 70</p>
                            </div>

                            <!--  Username Rating, Comment (sam part medians) -->
                            <p id="userName">{{upperMedianName}} <span id="usrRating">{{upperMedianScore}}</span></p>
                            <p>Comment</p>
                            <p id="comment">
                                {{upperMedianReview}}
                            </p>
                            <!--  Username Rating, Comment (sam part medians) -->
                            <p id="userName">{{middleMedianName}} <span id="usrRating">{{middleMedianScore}}</span></p>
                            <p>Comment</p>
                            <p id="comment">
                                {{middleMedianName}}
                            </p>
                            <!--  Username Rating, Comment (sam part medians) -->
                            <p id="userName">{{lowerMedianName}} <span id="usrRating">{{lowerMedianScore}}</span></p>
                            <p>Comment</p>
                            <p id="comment">
                                {{lowerMedianReview}}
                            </p>
                        </div>
                    </div>
                    <!--Take section above and apply dynamically (SAM NOTES) -->
                    <button class="btn waves-effect waves-light signInBtn" id="more-reviews" type="button" name="action">
                        Show-All-Reviews <i class="material-icons right">send</i>
                    </button>
                </div>

            </div>
            <div>
                <ul id="hidder">
                    {{#each ratings}}
                    {{> ratings-block}}
                    {{/each}}
                </ul>
                {{#each reviews}}
                <p>{{this}}</p>
                {{/each}}
            </div>
        </div>
    </div>
    <div class="btmSpacer s12"></div>
</div>