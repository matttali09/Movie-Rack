<!-- ====================================== Main Content ==================================================== -->
<div class="container">
    <div class="row">
        <!-- ================ movie details ================ -->
        <div class="mainContent darkerBg col s12">
            <div class="row">
                <div class="col s10 offset-s1 mvDtl" id="review">
                    <!--Take section below and apply dynamically (SAM NOTES) -->
                    <div class="row">
                        <!-- poster image -->
                        <div class="col s4 m3 l2">
                            <img class="mvImg" src="/assets/images/Dsdlbj3U4AAJoO7.jpg" />
                        </div>
                        <!-- Titles, Year, Rating-->
                        <div class="col s8 m9 l10">
                            <div>
                                <!-- Title, Year -->
                                <div class="row">
                                    <div class="col s12">
                                        <h5 class="left" id="title">{{title}}</h5>
                                        <p class="year-released">{{year}}</p>
                                    </div>
                                </div>
                                <!--Ratings -->
                                <p class="otherRatings">Rotten Tomatoes 80</p>
                                <p class="otherRatings">IMDB 85</p>
                                <p class="mrRating">MovieRack 70</p>
                            </div>

                            <!--  Username Rating, Comment -->
                            <p id="userName">UserName <span id="usrRating">95</span></p>
                            <p>Comment</p>
                            <p id="comment">
                                This was a great movie. After watching it I was able to swim
                                very long distances and talk to dolphins. I'd see it again.
                            </p>
                            <!-- Ratings, Username, Comment -->
                            <p id="userName">AnotherUserName <span id="usrRating">10</span></p>
                            <p>Comment</p>
                            <p id="comment">
                                This movie was terrible. Aquaman can't even fly or nothing.
                            </p>
                        </div>
                    </div>
                    <!--Take section above and apply dynamically (SAM NOTES) -->
                </div>
            </div>
        </div>
    </div>
</div>